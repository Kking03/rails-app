<div class="col-4">
</div>
<div class="sign-in-container col-4">
   <h4><%= t(:sign_in) %></h4>

  <%= form_with scope: :session, url: session_path, data: {turbo: "false"} do |form| %>
    <div class="form-group">
      <%= form.label :login, t(:login) %>
      <%= form.text_field :login, class: 'form-text-field form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :password, t(:password) %>
      <%= form.password_field :password, class: 'form-text-field form-control' %>
    </div>

    <div class="d-flex justify-content-center">
      <%= form.submit t(:sign_in_2), class: 'btn btn-outline-success' %>
    </div>
  <% end %>

</div>


