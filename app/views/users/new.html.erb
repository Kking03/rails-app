<div class="col-4">
</div>
<div class="sign-up-container col-4">
  <h4><%= t(:join_us) %></h4>

    <%= form_with model: @user, data: {turbo: "false"}, class: "form-group" do |form| %>
      <div class="form-group">
        <%= form.label :login, t(:login) %>
        <%= form.text_field :login, class: 'form-text-field form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :email, t(:email) %>
        <%= form.text_field :email, class: 'form-text-field form-control', type: "email", id: "exampleInputEmail1", 'aria-describedby': "emailHelp" %>
        <small id="emailHelp" class="form-text text-muted"><%= t(:safety_msg) %></small>
      </div>

      <div class="form-group">
        <%= form.label :password, t(:password) %>
        <%= form.password_field :password, class: 'form-text-field form-control' %>
      </div>
      <div class="d-flex justify-content-center">
        <%= form.submit t(:sign_up), class: 'btn btn-outline-primary'%>
      </div>
    <% end %>
</div>


